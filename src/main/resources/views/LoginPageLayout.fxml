<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox spacing="5.0" styleClass="root" stylesheets="@../styles/application.css" xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boostsolutions.jiraservice.controller.LoginPageController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/key.png" />
         </image>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </HBox.margin>
      </ImageView>
      <GridPane alignment="center" hgap="10" styleClass="root" vgap="10">
          <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
         </padding>
      
          <Text id="welcome-text" fill="WHITE" styleClass="title" text="Ласкаво Просимо!" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
      
          <Label text="Логін:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      
          <TextField fx:id="user" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
          <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      
          <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
          <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
              <Button fx:id="loginButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" text="Увійти" StackPane.alignment="CENTER_RIGHT">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/key-login-icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
          </HBox>
      
          <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      
          <stylesheets>
              <URL value="@/styles/application.css" />
          </stylesheets>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      
      </GridPane>
   </children>
</HBox>
